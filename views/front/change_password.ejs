<%- include('../partition/header.ejs') %>

<section>
    <div class="container-fluid">
        <div class="container mt-5 py-5">        
           <div class="row justify-content-center mt-1">  
            <div class="col-md-6 mt-5 registration-box shadow-lg px-5 py-3">
              <form action="/update_password/<%= data._id %>" method="post">
                <h1 class="text-center text-danger">Change Password</h1>
                <% if(message.length > 0){ %>
                    <div class="alert alert-danger">
                        <%=message %>
                    </div>
                <% } %>
                <div class="form-group mt-3">
                    <input type="password" name="opassword" placeholder="Old Password" class="form-control">
                </div>
                <div class="form-group mt-3">
                    <input type="password" name="npassword" placeholder="New Password" class="form-control">
                </div>
                <div class="form-group mt-3">
                    <input type="password" name="cnpassword" placeholder="Confirm New Password" class="form-control">
                </div>
                <div class="form-group mt-3">
                    <button class="btn" type="submit">Save</button>
                </div>
              </form>
            </div>
           </div>
        </div>
    </div>
</section>

<%- include('../partition/footer.ejs') %>