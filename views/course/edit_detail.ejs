                            <option <%= data.year_10th=='2021'? 'selected' :'' %>>2021</option>
                            <option <%= data.year_10th=='2022'? 'selected' :'' %>>2022</option>
                            </select>
                          </td>
                          <td><input type="text" name="school_10th" value="<%= data.school_10th %>" class="form-control" required></td>
                          <td><input type="text" name="board_10th" value="<%= data.board_10th %>" class="form-control" required></td>
