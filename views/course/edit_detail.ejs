                            <option <%= data.graduation_year=='2013'? 'selected' :'' %>>2013</option>
                            <option <%= data.graduation_year=='2014'? 'selected' :'' %>>2014</option>
                            <option <%= data.graduation_year=='2015'? 'selected' :'' %>>2015</option>
                            <option <%= data.graduation_year=='2016'? 'selected' :'' %>>2016</option>
