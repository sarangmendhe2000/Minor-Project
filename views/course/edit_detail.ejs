                            <option value="">Year</option>
                            <option <%= data.graduation_year=='2000'? 'selected' :'' %>>2000</option>
                            <option <%= data.graduation_year=='2001'? 'selected' :'' %>>2001</option>
                            <option <%= data.graduation_year=='2002'? 'selected' :'' %>>2002</option>
                            <option <%= data.graduation_year=='2003'? 'selected' :'' %>>2003</option>
                            <option <%= data.graduation_year=='2004'? 'selected' :'' %>>2004</option>
                            <option <%= data.graduation_year=='2005'? 'selected' :'' %>>2005</option>
                            <option <%= data.graduation_year=='2006'? 'selected' :'' %>>2006</option>
