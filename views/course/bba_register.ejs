<%- include('../partition/header.ejs') %>

<section class="registration">
    <div class="container-fluid">
      <div class="container mt-5 py-5">        
         <div class="row justify-content-center mt-1">  
          <div class="col-md-8 mt-5 registration-box">
            <form action="/registration" method="post" enctype="multipart/form-data">
              <h1 class="text-center">Registration Form</h1>
              
              <div class="row">
                <div class="form-group mt-3 col-md-6">
                  <input type="hidden" name="user_id" value="<%= id %>">
                  <label>Name :</label>
                  <input type="text" value="<%= n %>" name="name" placeholder="Enter Name*" class="form-control" style="width:80%;" required>
                </div>
                <div class="form-group mt-3 col-md-6">
                  <label>Mobile :</label>
                  <input type="tel" name="phone" class="form-control" placeholder="Enter Mobile No.*" style="width:80%;" required>
                </div> 
              </div>
              <div class="row">
                <div class="form-group mt-3 col-md-6">
                  <label>E-mail :</label>
                  <input type="email" value="<%= e %>" name="email" class="form-control" placeholder="Enter Email Address*" style="width:80%;" required>
                </div> 
                <div class="mt-3 col-md-6 form-group">
                  <label>Date of Birth :</label>
                  <input type="date" name="dob" class="form-control" style="width: 70%;" required>
                </div>
              </div>
              <div class="mt-3 form-group">
                <label>Gender :</label>
                <input type="radio" name="gender" value="Male">Male
                <input type="radio" name="gender" value="Female">Female
              </div>
              
              <div class="form-group mt-3">
                <label>Address :</label>
                <textarea name="address" rows="1" cols="40" class="form-control" style="width:80%;" required ></textarea>
              </div>
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group mt-3 ">
                    <label>Course :</label>
                    <select name="course" class="form-control" style="width: 70%;"  required>
                      <option>Select Course*</option> 
                      <option value="BBA">BBA</option> 
                    </select>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group mt-3 ">
                    <label>Specialization :</label>
                    <select name="specialization" class="form-control" style="width: 70%;" required>
                      <option>Select Specialization*</option>
                      <option value="BA">Business Analytics</option>
                      <option value="TTM">Travel and Tourism Management</option>
                      <option value="BFM">Banking and Finance Management</option>
                      <option value="HHM">Hospitality and Hotel Management</option>
                      <option value="HRM">Human Resource Management</option>
                      <option value="MM">Marketing Management</option>
                    
                    </select>
                  </div>
                </div>
              </div> 
              <div class="row">
                <table class="table text-center mt-3">
                  <thead>
                    <tr>
                      <th scope="col" style="width: 10%;">Course</th>
                      <th scope="col" style="width: 15%;">Pass Year</th>
                      <th scope="col" style="width: 30%;">School/ College</th>
                      <th scope="col" style="width: 30%;">Board/ University</th>
                      <th scope="col" style="width: 10%;">Percentage</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td>10th*</td>
                      <td>
                        <select name="year_10th" class="form-control" required>
                        <option>Year</option>
                        <option value="2000">2000</option>
                        <option value="2001">2001</option>
                        <option value="2002">2002</option>
                        <option value="2003">2003</option>
                        <option value="2004">2004</option>
                        <option value="2005">2005</option>
                        <option value="2006">2006</option>
                        <option value="2007">2007</option>
                        <option value="2008">2008</option>
                        <option value="2009">2009</option>
                        <option value="2010">2010</option>
                        <option value="2011">2011</option>
                        <option value="2012">2012</option>
                        <option value="2013">2013</option>
                        <option value="2014">2014</option>
                        <option value="2015">2015</option>
                        <option value="2016">2016</option>
                        <option value="2017">2017</option>
                        <option value="2018">2018</option>
                        <option value="2019">2019</option>
                        <option value="2020">2020</option>
                        <option value="2021">2021</option>
                        <option value="2022">2022</option>
                        </select>
                      </td>
                      <td><input type="text" name="school_10th" class="form-control" required></td>
                      <td><input type="text" name="board_10th" class="form-control" required></td>
                      <td><input type="number" name="percentage_10th" class="form-control"  required></td>
                    </tr>
                    <tr>
                      <td>12th*</td>
                      <td>
                        <select name="year_12th" class="form-control" required>
                        <option>Year</option>
                        <option value="2000">2000</option>
                        <option value="2001">2001</option>
                        <option value="2002">2002</option>
                        <option value="2003">2003</option>
                        <option value="2004">2004</option>
                        <option value="2005">2005</option>
                        <option value="2006">2006</option>
                        <option value="2007">2007</option>
                        <option value="2008">2008</option>
                        <option value="2009">2009</option>
                        <option value="2010">2010</option>
                        <option value="2011">2011</option>
                        <option value="2012">2012</option>
                        <option value="2013">2013</option>
                        <option value="2014">2014</option>
                        <option value="2015">2015</option>
                        <option value="2016">2016</option>
                        <option value="2017">2017</option>
                        <option value="2018">2018</option>
                        <option value="2019">2019</option>
                        <option value="2020">2020</option>
                        <option value="2021">2021</option>
                        <option value="2022">2022</option>
                        </select>
                      </td>
                      <td><input type="text" name="school_12th" class="form-control" required></td>
                      <td><input type="text" name="board_12th" class="form-control" required></td>
                      <td><input type="number" name="percentage_12th" class="form-control" required></td>
                    </tr>
                    <tr>
                      <td>Graduation</td>
                      <td>
                        <select name="graduation_year" class="form-control">
                        <option>Year</option>
                        <option value="2000">2000</option>
                        <option value="2001">2001</option>
                        <option value="2002">2002</option>
                        <option value="2003">2003</option>
                        <option value="2004">2004</option>
                        <option value="2005">2005</option>
                        <option value="2006">2006</option>
                        <option value="2007">2007</option>
                        <option value="2008">2008</option>
                        <option value="2009">2009</option>
                        <option value="2010">2010</option>
                        <option value="2011">2011</option>
                        <option value="2012">2012</option>
                        <option value="2013">2013</option>
                        <option value="2014">2014</option>
                        <option value="2015">2015</option>
                        <option value="2016">2016</option>
                        <option value="2017">2017</option>
                        <option value="2018">2018</option>
                        <option value="2019">2019</option>
                        <option value="2020">2020</option>
                        <option value="2021">2021</option>
                        <option value="2022">2022</option>
                        </select>
                      </td>
                      <td><input type="text" name="graduation_school" class="form-control" ></td>
                      <td><input type="text" name="graduation_board" class="form-control"></td>
                      <td><input type="number" name="graduation_percentage" class="form-control"></td>
                    </tr>
                      
                  </tbody>
                </table>
              </div>
              <div class="form-row mt-3" style="display: flex;flex-direction: row;flex-wrap: nowrap; justify-content: flex-start;">
                <label>Upload Image* : </label>
                <input type="file" name="image" required> 
              </div>
              <div class="form-group mt-3 text-center">
                <button class="btn" type="submit">Register</button>
              </div>  
            </form>
          </div>
         </div>
      </div>
    </div>
  </section>

